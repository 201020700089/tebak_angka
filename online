<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="game-container">
        <h1 class="text-3xl font-extrabold text-gray-900 mb-4">Tebak Angka!</h1>
        <p class="text-gray-700 mb-6">Saya telah memilih angka antara 1 dan 100. Bisakah Anda menebaknya?</p>

        <input type="number" id="guessInput" class="input-field" placeholder="Masukkan tebakan Anda">
        <button class="game-button mb-4" onclick="checkGuess()">Tebak</button>
        <button class="game-button reset-button hidden" id="resetButton" onclick="resetGame()">Main Lagi</button>

        <p id="message" class="message"></p>
        <p id="attempts" class="attempts">Percobaan: 0</p>
    </div>

    <script>
        let randomNumber; // Angka yang harus ditebak
        let attempts = 0; // Jumlah percobaan
        const maxAttempts = 10; // Batas percobaan

        const guessInput = document.getElementById('guessInput');
        const messageDisplay = document.getElementById('message');
        const attemptsDisplay = document.getElementById('attempts');
        const resetButton = document.getElementById('resetButton');

        // Fungsi untuk memulai atau mereset permainan
        function startGame() {
            randomNumber = Math.floor(Math.random() * 100) + 1; // Angka acak antara 1 dan 100
            attempts = 0;
            messageDisplay.textContent = '';
            attemptsDisplay.textContent = `Percobaan: ${attempts}`;
            guessInput.value = '';
            guessInput.disabled = false;
            resetButton.classList.add('hidden'); // Sembunyikan tombol reset
            guessInput.focus(); // Fokuskan input
        }

        // Fungsi untuk memeriksa tebakan pengguna
        function checkGuess() {
            const userGuess = parseInt(guessInput.value);

            if (isNaN(userGuess) || userGuess < 1 || userGuess > 100) {
                messageDisplay.textContent = 'Silakan masukkan angka yang valid antara 1 dan 100.';
                messageDisplay.style.color = '#ef4444'; // Warna merah untuk kesalahan
                return;
            }

            attempts++;
            attemptsDisplay.textContent = `Percobaan: ${attempts}`;

            if (userGuess === randomNumber) {
                messageDisplay.textContent = `Selamat! Anda menebak angka ${randomNumber} dengan benar dalam ${attempts} percobaan!`;
                messageDisplay.style.color = '#10b981'; // Warna hijau untuk berhasil
                guessInput.disabled = true;
                resetButton.classList.remove('hidden'); // Tampilkan tombol reset
            } else if (userGuess < randomNumber) {
                messageDisplay.textContent = 'Terlalu rendah! Coba lagi.';
                messageDisplay.style.color = '#f59e0b'; // Warna oranye untuk terlalu rendah
            } else {
                messageDisplay.textContent = 'Terlalu tinggi! Coba lagi.';
                messageDisplay.style.color = '#f59e0b'; // Warna oranye untuk terlalu tinggi
            }

            if (attempts >= maxAttempts && userGuess !== randomNumber) {
                messageDisplay.textContent = `Maaf, Anda kehabisan percobaan! Angka yang benar adalah ${randomNumber}.`;
                messageDisplay.style.color = '#ef4444'; // Warna merah untuk kalah
                guessInput.disabled = true;
                resetButton.classList.remove('hidden'); // Tampilkan tombol reset
            }
        }

        // Fungsi untuk mereset permainan
        function resetGame() {
            startGame();
        }

        // Memulai permainan saat halaman dimuat
        window.onload = startGame;
    </script>
</body>
</html>
